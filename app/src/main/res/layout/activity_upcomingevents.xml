<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upcomingevents"
    android:orientation="vertical"
    android:weightSum="2">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/h2"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plantation Drive at The Institute of Management Sciences Peshawar on 14th of July 2021"
        android:textColor="#01411c"
        android:textFontWeight="20"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/h11"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dinner and Prize Ceremony for GreenPak Heroes at The Pearl Continental Peshawar on 26th of July 2021"
        android:textColor="#01411c"
        android:textFontWeight="20"/>

</LinearLayout>