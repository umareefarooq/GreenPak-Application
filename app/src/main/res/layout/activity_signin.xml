<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signin"
    android:orientation="vertical"
    android:background="@drawable/leaf4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="   “He who plants a tree. Plants a hope.” ~ Lucy Larcom"
        android:gravity="right"
        android:textColor="#01411c"
        android:textSize="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:backgroundTint="#01411c"
        android:text="Sign in with Facebook" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in with Google    "
        android:backgroundTint="#01411c"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter Email or Phone Number"
        android:id="@+id/emailphone"
        android:layout_gravity="center"
        android:textColor="#01411c"
        android:textColorHint="#01411c"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Enter your Password"
        android:id="@+id/signpin"
        android:layout_gravity="center"
        android:textColor="#01411c"
        android:inputType="textPassword"
        android:textColorHint="#01411c"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:onClick="resetpassword"
        android:layout_gravity="center"
        android:backgroundTint="#01411c"
        android:layout_marginBottom="6dp"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="login"
        android:gravity="center"
        android:layout_gravity="center"
        android:backgroundTint="#01411c"
        android:layout_marginBottom="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have account?"
        android:layout_gravity="center"
        android:textColor="#01411c"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CREATE ACCOUNT"
        android:onClick="gotosignup"
        tools:ignore="UsingOnClickInXml"
        android:layout_gravity="center"
        android:backgroundTint="#01411c"
        android:layout_marginTop="6dp"/>

</LinearLayout>