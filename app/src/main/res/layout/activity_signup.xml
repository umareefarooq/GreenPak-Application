<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:orientation="vertical"
    android:background="@drawable/leaf4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="LET'S START PLANTING "
        android:textColor="#01411c"
        android:textFontWeight="200"
        android:textSize="25dp"
        android:gravity="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp with Facebook"
        android:layout_gravity="center"
        android:backgroundTint="#01411c"
        android:layout_marginBottom="6dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp with Google    "
        android:layout_gravity="center"
        android:backgroundTint="#01411c"
        android:layout_marginBottom="6dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or Register Via Email"
        android:textColor="#01411c"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Full Name "
            android:id="@+id/name"
            android:textColor="#01411c"
            android:layout_centerHorizontal="true"
            android:inputType="text"
            android:textColorHint="#01411c"/>

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:id="@+id/email"
            android:layout_below="@id/name"
            android:textColor="#01411c"
            android:layout_centerHorizontal="true"
            android:inputType="textEmailAddress"
            android:textColorHint="#01411c"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:id="@+id/phonenumber"
            android:layout_below="@id/email"
            android:textColor="#01411c"
            android:layout_centerHorizontal="true"
            android:inputType="phone"
            android:textColorHint="#01411c"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:id="@+id/age"
            android:layout_below="@id/phonenumber"
            android:textColor="#01411c"
            android:layout_centerHorizontal="true"
            android:inputType="numberDecimal"
            android:textColorHint="#01411c"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:id="@+id/pin"
            android:layout_below="@id/age"
            android:textColor="#01411c"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            android:textColorHint="#01411c"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Joining us you agree to Green Pak's terms and conditions and privacy policy"
            android:id="@+id/tnc"
            android:layout_below="@id/pin"
            android:textColor="#01411c"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Join Now"
            android:id="@+id/joinnow"
            android:layout_below="@id/tnc"
            android:onClick="signup"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#01411c"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:id="@+id/alreadyjoined"
            android:layout_below="@id/joinnow"
            android:layout_centerHorizontal="true"
            android:textColor="#01411c"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:id="@+id/login"
            android:layout_below="@id/alreadyjoined"
            android:onClick="gotologin"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#01411c"
            android:layout_marginTop="6dp"/>
    </RelativeLayout>

</LinearLayout>